---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SITE_CONFIG, CONTACT_LINKS } from '../utils/constants';
---

<BaseLayout title={SITE_CONFIG.title}>
  <Navigation />
  <main class="main">
    <section class="hero">
      <div class="container">
        <h1 class="animated-title">{SITE_CONFIG.name}</h1>
        <p class="description" set:html={SITE_CONFIG.bio.replace('Productbox', '<a href="https://productbox.dev/" target="_blank" rel="noopener noreferrer" class="bio-link">Productbox</a>')}></p>
        <div class="contact">
          <a href={CONTACT_LINKS.github} target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href={CONTACT_LINKS.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .main {
    flex: 1;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: var(--spacing-md);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-md);
    text-align: center;
  }

  .hero {
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .hero h1 {
    margin-bottom: var(--spacing-md);
    font-size: 3rem;
  }

  .animated-title {
    animation: fadeInUp 1s ease-out;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .description {
    max-width: 1000px;
    margin: 0 auto var(--spacing-lg);
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  p.description a.bio-link {
    color: var(--color-text-light) !important;
    font-weight: 700 !important;
    text-decoration: underline;
    text-underline-offset: 2px;
    font-style: italic;
  }

  .description .bio-link:hover {
    opacity: 0.7;
  }

  .contact {
    display: flex;
    justify-content: end;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .contact a {
    color: var(--color-text-light);
    font-weight: 700;
    transition: opacity 0.2s ease;
  }

  .contact a:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .description {
      font-size: 1rem;
    }

    .contact {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
  }
</style>

