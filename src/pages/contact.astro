---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SITE_CONFIG, CONTACT_LINKS } from '../utils/constants';
---

<BaseLayout title={`Contact - ${SITE_CONFIG.name}`}>
  <Navigation />
  <main class="main">
    <section class="contact-section">
      <div class="container">
        <h1>Get In Touch</h1>
        <p class="section-intro">
          I'm always open to discussing new opportunities, interesting projects, or collaboration ideas. 
          Feel free to reach out through any of the channels below.
        </p>
        <div class="contact-content">
         
          <div class="contact-item">
            <h3>GitHub</h3>
            <a href={CONTACT_LINKS.github} target="_blank" rel="noopener noreferrer">
              {CONTACT_LINKS.github.replace('https://', '')}
            </a>
          </div>
          <div class="contact-item">
            <h3>LinkedIn</h3>
            <a href={CONTACT_LINKS.linkedin} target="_blank" rel="noopener noreferrer">
              {CONTACT_LINKS.linkedin.replace('https://www.', '')}
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .main {
    flex: 1;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--spacing-md);
  }

  .contact-section {
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .contact-section h1 {
    margin-bottom: var(--spacing-sm);
    text-align: center;
  }

  .section-intro {
    text-align: center;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto var(--spacing-lg);
    font-size: 1.125rem;
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .contact-item {
    text-align: center;
    padding: var(--spacing-md);
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  .contact-item h3 {
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent);
  }

  .contact-item a {
    font-size: 1.125rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: var(--spacing-lg) var(--spacing-sm);
    }
  }
</style>

