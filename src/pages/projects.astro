---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { PROJECTS, SITE_CONFIG } from '../utils/constants';
---

<BaseLayout title={`Projects - ${SITE_CONFIG.name}`}>
  <Navigation />
  <main class="main">
    <section class="projects-section">
      <div class="container">
        <h1>Projects</h1>
        <p class="section-intro">
          A selection of production applications I've built, focusing on backend architecture, 
          database design, and full-stack development.
        </p>
        <!-- <div class="projects-grid">
          {PROJECTS.map((project) => (
            <ProjectCard {...project} />
          ))}
        </div> -->
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .main {
    flex: 1;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--spacing-md);
  }

  .projects-section {
    padding: var(--spacing-xl) var(--spacing-md);
  }

  .projects-section h1 {
    margin-bottom: var(--spacing-sm);
    text-align: center;
  }

  .section-intro {
    text-align: center;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto var(--spacing-lg);
    font-size: 1.125rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .projects-section {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

