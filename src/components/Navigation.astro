---
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="nav">
  <div class="nav-container">
    <div class="nav-right">
      <ThemeToggle />
    </div>
  </div>
</nav>

<style>
  .nav {
    background-color: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--spacing-sm) var(--spacing-md);
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: var(--spacing-sm);
    }

    .nav-right {
      gap: var(--spacing-sm);
    }
  }
</style>

